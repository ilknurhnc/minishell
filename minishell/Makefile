NAME = minishell

SRCS = 	minishell.c\
		utils.c\
		signals.c\
		quotes.c\
		init.c\
		dollar.c\
		control.c\
		bilmiyorum.c\
		env.c\
		built_in.c\
		setting.c\
		free.c\
		
CC = gcc
CFLAGS = -Wall -Wextra -Werror -g #-lhistory -lncurses #-fsanitize=address
OBJS = $(SRCS:.c=.o)
RM = rm -f

all: ${NAME}
${NAME}: ${OBJS}
	@${CC} ${CFLAGS} ${OBJS} -o ${NAME} -lreadline

clean: 
	@${RM} ${OBJS}

fclean: clean
	@${RM} ${NAME}

re: fclean all

.PHONY: all clean fclean re